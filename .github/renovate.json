{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended",
    ":semanticCommitTypeAll(chore)"
  ],
  "rangeStrategy": "in-range-only",
  "packageRules": [
    {
      "matchManagers": [
        "cargo"
      ],
      "separateMultipleMajor": true,
      "groupName": "Rust dependencies"
    },
    {
      "matchManagers": [
        "pip_requirements",
        "pip_setup",
        "pipenv",
        "poetry",
        "uv"
      ],
      "separateMultipleMajor": true,
      "matchFiles": [
        "**/requirements.txt",
        "**/pyproject.toml",
        "**/Pipfile",
        "**/uv.lock"
      ],
      "groupName": "Python dependencies"
    }
  ],
  "schedule": [
    "on monday"
  ]
}
